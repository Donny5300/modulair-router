<table class="table table-striped table-responsive">
	<thead>
		<tr>
			<td># ID</td>
			<td>Title</td>
			<td>Namespace</td>
			<td>Controllers</td>
			<td>Actions</td>
		</tr>
	</thead>

	<tbody>
		{% for item in modules %}
			<tr>
				<td>{{ item.id }}</td>
				<td>{{ item.title }}</td>
				<td>{{ item.appNamespace.title }}</td>
				<td>
					{% if item.controllers %}
						<ul>
							{% for controller in item.controllers %}
								<li>
									{{ controller.title }}
								</li>
							{% endfor %}
						</ul>
					{% else %}
						No controllers found
					{% endif %}

				</td>
				<td>
					<form action="/system/modules/{{ item.uuid }}" method="post" class="btn-group">
						<a href="/system/modules/{{ item.uuid }}/edit" class="btn btn-info">Edit</a>
						{{ csrf_field() }}
						<input type="submit" value="Delete" class="btn btn-danger">
					</form>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>