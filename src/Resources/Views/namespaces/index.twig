<table class="table table-striped table-responsive">
	<thead>
		<tr>
			<td># ID</td>
			<td>Title</td>
			<td>Is developer</td>
			<td>Is online</td>
			<td>Module</td>
			<td>Actions</td>
		</tr>
	</thead>

	<tbody>
		{% for item in namespaces %}
			<tr>
				<td>{{ item.id }}</td>
				<td>{{ item.title }}</td>
				<td>{{ item.developer_only ? 'Yes' : 'No' }}</td>
				<td>{{ item.is_online ? 'Yes' : 'No' }}</td>
				<td>{{ item.appNamespace.title }}
					{% if not item.modules is empty %}
						<ul>
							{% for module in item.modules %}
								<li>{{ module.title }}</li>
							{% endfor %}
						</ul>
					{% endif %}

				</td>
				<td>

					<form action="/system/namespaces/{{ item.uuid }}" method="post" class="btn-group">
						<a href="/system/namespaces/{{ item.uuid }}/edit" class="btn btn-info">Edit</a>
						{{ csrf_field() }}
						<input type="submit" value="Delete" class="btn btn-danger">
					</form>
				</td>
			</tr>
		{% endfor %}
	</tbody>
</table>