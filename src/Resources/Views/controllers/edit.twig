<form action="/system/controllers/{{ item.uuid }}/edit" method="post" class="form-horizontal">

	{{ csrf_field() }}
	<div class="form-group">
		<label for="" class="col-sm-4 control-label">Title</label>
		<div class="col-sm-8">
			<input type="text" name="title" placeholder="Namespace title" value="{{ old('title', item.title) }}" class="form-control">
		</div>
	</div>

	<div class="form-group">
		<label for="" class="col-sm-4 control-label">Developer only</label>
		<div class="col-sm-8">
			<select name="developer_only" id="" class="form-control">
				<option value="0" {{ old('developer_only', item.developer_only) == 0 ? 'selected' }}>No</option>
				<option value="1" {{ old('developer_only', item.developer_only) == 1 ? 'selected' }}>Yes</option>
			</select>
		</div>
	</div>

	<div class="form-group">
		<label for="" class="col-sm-4 control-label">Is online</label>
		<div class="col-sm-8">
			<select name="is_online" id="" class="form-control">
				<option value="0" {{ old('is_online', item.is_online) == 0 ? 'selected' }}>No</option>
				<option value="1" {{ old('is_online', item.is_online) == 1 ? 'selected' }}>Yes</option>
			</select>
		</div>
	</div>

	<div class="form-group">
		<label for="" class="col-sm-4 control-label">Description</label>
		<div class="col-sm-8">
			<textarea name="description" class="form-control">{{ old('description', item.description) }}</textarea>
		</div>
	</div>

	<div class="form-group">
		<label for="" class="control-label col-sm-4">Select namespace</label>
		<div class="col-sm-8">
			<select name="module_id" id="" class="form-control">
				<option value="">Make a choice</option>
				{% for key, value in modules %}
					<option value="{{ key }}" {{ key == old('module_id', item.module_id) ? 'selected' }}>{{ value }}</option>
				{% endfor %}
			</select>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-8 col-sm-offset-4">
			<input type="submit" value="Save" class="btn btn-success">
		</div>
	</div>
</form>